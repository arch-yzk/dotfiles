alias lta="ls -alhT"
alias sudi="sudo -i -k"

dotacat=/usr/bin/dotacat
if [ -e $dotacat ];then
    alias lolcat="dotacat"
    alias cat="lolcat"
fi

lolcat=/usr/bin/lolcat
